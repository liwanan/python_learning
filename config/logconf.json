{
    "version":1,
    "disable_existing_loggers":false,
    "formatters":{
        "simple":{
            "format":"%(asctime)s %(filename)s %(name)s %(lineno)d [%(levelname)s] %(message)s",
            "datefmt":"%Y-%m-%d %H:%M:%S"
        }
    },
    "handlers":{
        "console":{
            "class":"logging.StreamHandler",
            "level":"DEBUG",
            "formatter":"simple",
            "stream":"ext://sys.stdout"
        },
        "testpmd":{
            "class":"logging.handlers.TimedRotatingFileHandler",
            "level":"INFO",
            "formatter":"simple",
            "filename":"log/testpmd.log",
            "when":"H",
            "interval":1,
            "backupCount":50,
            "encoding":"utf8"
        },
        "pktgen":{
            "class":"logging.handlers.TimedRotatingFileHandler",
            "level":"INFO",
            "formatter":"simple",
            "filename":"log/pktgen.log",
            "when":"H",
            "interval":1,
            "backupCount":50,
            "encoding":"utf8"
        }
    },
    "loggers":{
        "lib.testpmd":{
            "level":"DEBUG",
            "handlers":["testpmd"],
            "propagate":"no"
        },
        "lib.pktgen":{
            "level":"DEBUG",
            "handlers":["pktgen"],
            "propagate":"no"
        }
    },
    "root":{
        "level":"INFO",
        "handlers":["console"]
    },
    "testpmd":{
        "level":"INFO",
        "handlers":["testpmd"]
    }
}
